ARG FROM_PLATFORM
ARG IMAGE_BASIC_POSTGRES_VERSION
FROM --platform=${FROM_PLATFORM} sparrow-basic-postgres:${IMAGE_BASIC_POSTGRES_VERSION}

ARG POSTGRES_DB
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ENV POSTGRES_DB ${POSTGRES_DB}
ENV POSTGRES_USER ${POSTGRES_USER}
ENV POSTGRES_PASSWORD ${POSTGRES_PASSWORD}

CMD ["postgres"]
